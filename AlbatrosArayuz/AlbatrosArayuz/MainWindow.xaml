<Window x:Class="AlbatrosArayuz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Albatros Arayüzü" Height="720" Width="1280" WindowStartupLocation="CenterScreen">
    <Grid Background="#223456">
        <!-- Ana Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>

        <!-- Kamera Görüntüleme -->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="White" BorderThickness="2" Margin="5">
            <TextBlock Text="KAMERA GÖRÜNTÜLEME" Foreground="White" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>

        <!-- Harita Görüntüleme -->
        <Border Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" BorderBrush="White" BorderThickness="2" Margin="5">
            <TextBlock Text="HARİTA GÖRÜNTÜLEME" Foreground="White" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>

        <!-- Sol Panel: Rakip Seçin Dropdown ve Butonlar -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="5" Background="#1A2B3C">
            <TextBlock Text="RAKİP SEÇİN :" Foreground="White" FontSize="16" FontWeight="Bold" Margin="5"/>
            <ComboBox Margin="5" Height="30" Background="White" Foreground="Black">
                <ComboBoxItem Content="Rakip 1" />
                <ComboBoxItem Content="Rakip 2" />
                <ComboBoxItem Content="Rakip 3" />
            </ComboBox>

            <Button Content="Arm" Margin="5" Height="30" Background="SteelBlue" Foreground="White" />
            <Button Content="Otonom Kalkış" Margin="5" Height="30" Background="SteelBlue" Foreground="White" />
            <Button Content="Kilitlenme" Margin="5" Height="30" Background="Gray" Foreground="White" />
            <Button Content="Otonom" Margin="5" Height="30" Background="Gray" Foreground="White" />
            <Button Content="Dalış" Margin="5" Height="30" Background="Gray" Foreground="White" />
            <Button Content="Kaçış" Margin="5" Height="30" Background="Gray" Foreground="White" />
            <Button Content="Kamikaze Başlat" Margin="5" Height="30" Background="Red" Foreground="White" />
            <Button Content="Hava Savunma Sistemleri" Margin="5" Height="30" Background="SteelBlue" Foreground="White" />
        </StackPanel>

        <!-- Orta Panel: Takım Bilgisi -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="5" Background="#1A2B3C" >
            <TextBlock Text="Takım No: 99" Foreground="White" FontSize="16" Margin="5 15" />
            <TextBlock Text="İrtifa: 12" Foreground="White" FontSize="16" Margin="5 15" />
            <TextBlock Text="Yönelme: 33" Foreground="White" FontSize="16" Margin="5 15" />
            <TextBlock Text="Dikilme: -" Foreground="White" FontSize="16" Margin="5 15" />
            <TextBlock Text="Yatış: -" Foreground="White" FontSize="16" Margin="5 15" />
            <TextBlock Text="Zaman Farkı: -" Foreground="White" FontSize="16" Margin="5 15" />
            <Button Content="Takibi Bırak" Margin="5" Background="Red" Foreground="White" FontSize="14"
                    Height="40" Width="200" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Orta Sağ: Uçuş Süresi, Batarya Durumu ve Konsol -->
        <StackPanel Grid.Row="1" Grid.Column="2" Margin="5" Background="#1A2B3C">
            <!-- Uçuş Süresi -->
            <TextBlock Text="Uçuş Süresi:" Foreground="White" FontSize="16" FontWeight="Bold" Margin="5"/>
            <TextBlock Text="00:00:00" Foreground="White" FontSize="14" Margin="5"/>

            <!-- Batarya Durumu -->
            <TextBlock Text="Batarya Durumu:" Foreground="White" FontSize="16" FontWeight="Bold" Margin="5"/>
            <TextBlock Text="100%" Foreground="White" FontSize="14" Margin="5"/>

            <!-- Konsol -->
            <TextBlock Text="Konsol:" Foreground="White" FontSize="16" FontWeight="Bold" Margin="5"/>
            <Border Background="#2D3E50" CornerRadius="5" Height="235" Margin="5">
                <TextBlock Text="Konsol İçeriği Burada" Foreground="White" FontSize="14" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" />
            </Border>
        </StackPanel>

        <!-- Sağ Panel: WiFi Bağlantısı, Sunucu, Sistem Saati, Takım Adı/Şifre -->
        <StackPanel Grid.Row="1" Grid.Column="3" Margin="5" Background="#1A2B3C">
            <TextBlock Text="WiFi Bağlantısı: 1.1.1.1" Foreground="White" FontSize="16" Margin="5 30" />
            <TextBlock Text="Sunucu Bağlantısı: 1.1.1.1" Foreground="White" FontSize="16" Margin="5 30" />
            <TextBlock Text="Sistem Saati: 17:30" Foreground="White" FontSize="16" Margin="5 30" />
            <TextBlock Text="Takım Adı: -" Foreground="White" FontSize="16" Margin="5 30" />
            <TextBlock Text="Takım Şifresi: -" Foreground="White" FontSize="16" Margin="5 30" />
        </StackPanel>
    </Grid>
</Window>
